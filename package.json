{
  "name": "logiciel-escalade",
  "version": "1.0.0",
  "description": "Logiciel de gestion de presence pour salle d'escalade",
  "main": "main.js",
  "scripts": {
    "start:backend": "cd backend && npm start",
    "start:admin": "cd admin-dashboard && npm start",
    "start:tablet": "cd tablet-ui && npm start",
    "start": "npm run install-all && concurrently \"npm run start:backend\" \"npm run start:admin\" \"npm run start:tablet\"",
    "dev": "npm run start",
    "dev:backend": "cd backend && npm run dev",
    "dev:admin": "cd admin-dashboard && npm start",
    "dev:tablet": "cd tablet-ui && npm run dev",
    "build": "npm run build-all",
    "build-all": "npm run build-frontend && npm run build-backend",
    "build-frontend": "npm run build-admin && npm run build-tablet",
    "build-admin": "cd admin-dashboard && npm install && npm run build",
    "build-tablet": "cd tablet-ui && npm install && npm run build",
    "build-backend": "cd backend && npm install --production",
    "install-all": "npm install && npm run install-backend && npm run install-admin && npm run install-tablet",
    "install-backend": "cd backend && npm install",
    "install-admin": "cd admin-dashboard && npm install",
    "install-tablet": "cd tablet-ui && npm install",
    "electron": "electron .",
    "electron:dev": "electron . --dev",
    "build:exe": "npm run build-all && electron-builder",
    "clean": "rimraf dist && rimraf */node_modules && rimraf */build && rimraf */dist",
    "rebuild": "npm run clean && npm run install-all && npm run build-all"
  },
  "author": "Kevin Bleys",
  "license": "MIT",
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.13.3",
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.1"
  },
  "dependencies": {
    "express": "^4.18.3",
    "node-windows": "^0.1.14"
  },
  "build": {
    "appId": "com.escalade.logiciel-presence",
    "productName": "Logiciel Escalade",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "backend/**/*",
      "admin-dashboard/build/**/*",
      "tablet-ui/dist/**/*",
      "assets/**/*",
      "create-shortcuts.js",
      "installer-script.nsh",
      "package.json",
      "!backend/node_modules/**/*",
      "!admin-dashboard/node_modules/**/*",
      "!tablet-ui/node_modules/**/*",
      "!admin-dashboard/src/**/*",
      "!tablet-ui/src/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Logiciel Escalade",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": false,
      "artifactName": "logiciel-escalade-${version}.${ext}",
      "displayLanguageSelector": false,
      "include": "installer-script.nsh"
    }
  }
}