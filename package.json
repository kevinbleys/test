{
  "name": "logiciel-escalade",
  "version": "1.0.0",
  "description": "Logiciel de gestion de presence pour salle d'escalade",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "node build-installer.js",
    "clean": "rmdir /s /q dist 2>nul || echo 'Dossier dist efface'",
    "rebuild": "npm run clean && npm run build",
    "build-all": "npm run --prefix admin-dashboard build && npm run --prefix tablet-ui build && npm run --prefix backend install --production"
  },
  "author": "Kevin Bleys",
  "license": "MIT",
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "express": "^4.18.3",
    "node-windows": "^0.1.14"
  },
  "build": {
    "appId": "com.escalade.logiciel-presence",
    "productName": "Logiciel Escalade",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "backend/**/*",
      "admin-dashboard/build/**/*",
      "tablet-ui/dist/**/*",
      "assets/**/*",
      "create-shortcuts.js",
      "installer-script.nsh",
      "package.json",
      "!backend/node_modules/**/*",
      "!admin-dashboard/node_modules/**/*",
      "!tablet-ui/node_modules/**/*",
      "!admin-dashboard/src/**/*",
      "!tablet-ui/src/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Logiciel Escalade",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": false,
      "artifactName": "logiciel-escalade-${version}.${ext}",
      "displayLanguageSelector": false,
      "include": "installer-script.nsh"
    }
  }
}
