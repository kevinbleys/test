{
  "name": "climbing-club-software",
  "version": "2.0.0",
  "description": "Logiciel de gestion pour club d'escalade avec interface tablette et administration",
  "main": "ClimbingClubTray.exe",
  "scripts": {
    "start": "node backend/server.js",
    "start:backend": "node backend/server.js",
    "start:frontend": "node tablet-ui/serve.js",
    "start:admin": "node admin-dashboard/serve.js",
    "build": "npm run build:frontend && npm run build:admin && npm run build:exe",
    "build:frontend": "cd tablet-ui && npm run build",
    "build:admin": "cd admin-dashboard && npm run build", 
    "build:exe": "npm run build:installer",
    "build:installer": "makensis installer.nsi",
    "install:services": "install-services.bat",
    "uninstall:services": "uninstall-services.bat",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\" \"npm run start:admin\"",
    "postinstall": "cd backend && npm install && cd ../tablet-ui && npm install && cd ../admin-dashboard && npm install"
  },
  "keywords": [
    "climbing",
    "club",
    "management",
    "escalade",
    "tablet",
    "administration"
  ],
  "author": "Club d'Escalade",
  "license": "MIT",
  "dependencies": {
    "node-windows": "^1.0.0-beta.8",
    "concurrently": "^7.6.0"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.climbingclub.software",
    "productName": "Logiciel Club d'Escalade",
    "directories": {
      "output": "dist"
    },
    "files": [
      "backend/**/*",
      "tablet-ui/build/**/*",
      "admin-dashboard/build/**/*",
      "ClimbingClubTray.exe",
      "*.js",
      "*.bat",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "climbing-icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "language": "French"
    }
  }
}
