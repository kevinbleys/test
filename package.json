{
  "name": "klimzaal-presence-management",
  "version": "1.0.0",
  "description": "Klimzaal Presence Management Systeem - Complete Installer",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "node build-installer.js",
    "install-deps": "npm install",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Kevin Bleys",
  "license": "MIT",
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "node-windows": "^0.1.14"
  },
  "build": {
    "appId": "com.klimzaal.presence-management",
    "productName": "Klimzaal Presence Management",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "backend/**/*",
      "admin-dashboard/**/*",
      "tablet-ui/**/*", 
      "assets/**/*",
      "package.json",
      "!backend/node_modules/**/*",
      "!admin-dashboard/node_modules/**/*",
      "!tablet-ui/node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Klimzaal Admin",
      "installerIcon": "assets/icon.png",
      "uninstallerIcon": "assets/icon.png",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": false
    }
  }
}