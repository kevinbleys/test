<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administration - Pr√©sences du jour</title>
    <style>
        body {
            margin: 0;
            padding: 20px;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        
        .container { max-width: 1400px; margin: 0 auto; }
        
        .admin-header {
            background: white;
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 20px;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        
        .admin-header h1 {
            margin: 0;
            color: #333;
            font-size: 28px;
            font-weight: 600;
        }
        
        .main-content {
            display: grid;
            grid-template-columns: 1fr 350px;
            gap: 20px;
        }
        
        .left-panel, .right-panel {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }
        
        .card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        
        .debug-card {
            font-family: 'SF Mono', 'Monaco', 'Inconsolata', monospace;
            font-size: 12px;
            color: #666;
            background: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            border-left: 4px solid #007bff;
        }
        
        .controls-card {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 15px;
        }
        
        .date-controls {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .date-controls label {
            font-weight: 600;
            color: #555;
        }
        
        .date-controls input[type="date"] {
            padding: 8px 12px;
            border: 2px solid #e1e5e9;
            border-radius: 8px;
            font-size: 14px;
        }
        
        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
            font-size: 14px;
        }
        
        .btn-primary {
            background: #007bff;
            color: white;
        }
        
        .btn-primary:hover {
            background: #0056b3;
            transform: translateY(-2px);
        }
        
        .btn-info {
            background: #17a2b8;
            color: white;
        }
        
        .btn-info:hover {
            background: #117a8b;
        }
        
        .btn-warning {
            background: #fd7e14;
            color: white;
        }
        
        .btn-warning:hover {
            background: #e8650e;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
        }
        
        .stat-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            text-align: center;
            padding: 25px 20px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        
        .stat-card:nth-child(2) {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        }
        
        .stat-card:nth-child(3) {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        }
        
        .stat-card:nth-child(4) {
            background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        }
        
        .stat-number {
            font-size: 48px;
            font-weight: 700;
            margin-bottom: 8px;
        }
        
        .stat-label {
            font-size: 14px;
            opacity: 0.9;
        }
        
        .table-card { overflow-x: auto; }
        
        table {
            width: 100%;
            border-collapse: collapse;
        }
        
        th {
            background: #f8f9fa;
            padding: 15px 12px;
            text-align: left;
            font-weight: 600;
            color: #495057;
            font-size: 14px;
            border-bottom: 2px solid #dee2e6;
        }
        
        td {
            padding: 15px 12px;
            border-bottom: 1px solid #dee2e6;
        }
        
        tbody tr:hover { background: #f8f9fa; }
        
        .badge {
            display: inline-block;
            padding: 6px 12px;
            font-size: 12px;
            font-weight: 600;
            border-radius: 20px;
        }
        
        .badge-adherent {
            background: #28a745;
            color: white;
        }
        
        .badge-non-adherent {
            background: #ffc107;
            color: #212529;
        }
        
        .badge-paye {
            background: #17a2b8;
            color: white;
        }
        
        .action-btn {
            padding: 6px 10px;
            border: none;
            border-radius: 6px;
            font-size: 12px;
            font-weight: 600;
            cursor: pointer;
            margin-right: 5px;
        }
        
        .btn-validate {
            background: #28a745;
            color: white;
        }
        
        .btn-delete {
            background: #dc3545;
            color: white;
        }
        
        .export-card h4 {
            color: #495057;
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 20px;
        }
        
        .export-card select {
            width: 100%;
            padding: 12px;
            border: 2px solid #e1e5e9;
            border-radius: 8px;
            margin-bottom: 15px;
            font-size: 14px;
        }
        
        .btn-success {
            background: #28a745;
            color: white;
            width: 100%;
        }
        
        .btn-success:hover {
            background: #1e7e34;
        }
        
        .auto-refresh-info {
            text-align: center;
            color: #6c757d;
            font-size: 14px;
            margin-top: 15px;
        }
        
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.5);
        }
        
        .modal-content {
            background-color: white;
            margin: 5% auto;
            padding: 30px;
            border-radius: 15px;
            width: 90%;
            max-width: 500px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        }
        
        .modal-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 25px;
        }
        
        .modal-header h3 {
            margin: 0;
            color: #495057;
        }
        
        .close {
            color: #adb5bd;
            font-size: 28px;
            cursor: pointer;
        }
        
        .close:hover { color: #495057; }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #495057;
        }
        
        .form-group input,
        .form-group select {
            width: 100%;
            padding: 12px;
            border: 2px solid #e1e5e9;
            border-radius: 8px;
            font-size: 14px;
        }
        
        .modal-actions {
            display: flex;
            justify-content: flex-end;
            gap: 10px;
            margin-top: 25px;
        }
        
        .btn-cancel {
            background: #6c757d;
            color: white;
        }
        
        @media (max-width: 1200px) {
            .main-content { grid-template-columns: 1fr; }
            .stats-grid { grid-template-columns: repeat(2, 1fr); }
        }
        
        @media (max-width: 768px) {
            .controls-card { flex-direction: column; }
            .stats-grid { grid-template-columns: 1fr; }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="admin-header">
            <h1>üìä Administration - Pr√©sences du jour</h1>
        </div>
        
        <div class="main-content">
            <div class="left-panel">
                <div class="card">
                    <div class="debug-card" id="debug-content">
                        Loading debug info...
                    </div>
                </div>
                
                <div class="card controls-card">
                    <div class="date-controls">
                        <label for="dateFilter">S√©lectionner une date:</label>
                        <input type="date" id="dateFilter">
                        <button class="btn btn-primary" onclick="loadTodayPresences()">Aujourd'hui</button>
                        <button class="btn btn-info" onclick="loadPresences()">Charger</button>
                        <button class="btn btn-warning" onclick="archiveToday()">üì¶ Archiver</button>
                    </div>
                </div>
                
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-number" id="stat-total">0</div>
                        <div class="stat-label">Total pr√©sences</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-number" id="stat-adherents">0</div>
                        <div class="stat-label">Adh√©rents</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-number" id="stat-non-adherents">0</div>
                        <div class="stat-label">Non-adh√©rents</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-number" id="stat-revenue">0</div>
                        <div class="stat-label">Recettes (‚Ç¨)</div>
                    </div>
                </div>
                
                <div class="card table-card">
                    <div id="loading" style="display: none; text-align: center; padding: 40px; color: #6c757d;">
                        Chargement...
                    </div>
                    
                    <div id="data-content">
                        <table>
                            <thead>
                                <tr>
                                    <th>Date/Heure</th>
                                    <th>Type</th>
                                    <th>Nom</th>
                                    <th>Pr√©nom</th>
                                    <th>Niveau</th>
                                    <th>Tarif</th>
                                    <th>Paiement</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="presences-table">
                            </tbody>
                        </table>
                        
                        <div id="no-data" style="display: none; text-align: center; padding: 40px; color: #6c757d;">
                            <h3>Aucune pr√©sence pour cette date</h3>
                        </div>
                    </div>
                </div>
                
                <div class="auto-refresh-info">
                    üîÑ Actualisation automatique toutes les 30 secondes
                </div>
            </div>
            
            <div class="right-panel">
                <div class="card export-card">
                    <h4>üèîÔ∏è Export Saison Actuelle</h4>
                    <button class="btn btn-success" onclick="exportSeason()">üìä Exporter Saison</button>
                </div>
                
                <div class="card export-card">
                    <h4>üìä Export Excel Historique</h4>
                    <select id="yearSelect">
                        <option value="">S√©lectionner une ann√©e...</option>
                    </select>
                    <button class="btn btn-success" onclick="exportYear()">üìä Exporter</button>
                </div>
            </div>
        </div>
    </div>

    <div id="paymentModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>üí≥ Validation du paiement</h3>
                <span class="close" onclick="closePaymentModal()">&times;</span>
            </div>
            <div class="form-group">
                <label for="montant">Montant (‚Ç¨)</label>
                <input type="number" id="montant" step="0.5" min="0">
            </div>
            <div class="form-group">
                <label for="methodePaiement">M√©thode</label>
                <select id="methodePaiement">
                    <option value="">S√©lectionner...</option>
                    <option value="Especes">üíµ Esp√®ces</option>
                    <option value="CB">üí≥ Carte bancaire</option>
                    <option value="Cheque">üìù Ch√®que</option>
                </select>
            </div>
            <div class="modal-actions">
                <button class="btn btn-cancel" onclick="closePaymentModal()">Annuler</button>
                <button class="btn btn-success" onclick="confirmPayment()">Valider</button>
            </div>
        </div>
    </div>

    <script>
        let currentPresenceId = null;
        let autoRefreshInterval = null;
        let currentSelectedDate = null;

        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('dateFilter').value = today;
            currentSelectedDate = today;
            
            loadPresences();
            loadAvailableYears();
            startAutoRefresh();
        });

        // FIX: Better error handling
        async function loadPresences() {
            try {
                updateDebugInfo('Loading presences...');
                document.getElementById('loading').style.display = 'block';
                
                let url = '/presences';
                let isHistorical = false;
                const today = new Date().toISOString().split('T')[0];
                
                if (currentSelectedDate && currentSelectedDate !== today) {
                    url = `/presences/history/${currentSelectedDate}`;
                    isHistorical = true;
                }
                
                console.log('Fetching:', url);
                
                const response = await fetch(url);
                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }
                
                const data = await response.json();
                console.log('Response:', data);
                
                if (data.success) {
                    const presences = data.presences || [];
                    displayPresences(presences, isHistorical);
                    updateStats(presences);
                    updateDebugInfo(`Loaded ${presences.length} presences ${isHistorical ? '(historical)' : '(live)'}`);
                } else {
                    throw new Error(data.error || 'Unknown error');
                }
                
            } catch (error) {
                console.error('Error loading presences:', error);
                updateDebugInfo(`Error: ${error.message}`);
                displayPresences([], false);
                alert(`Erreur: ${error.message}`);
            } finally {
                document.getElementById('loading').style.display = 'none';
            }
        }

        function loadPresencesForDate() {
            const dateInput = document.getElementById('dateFilter');
            currentSelectedDate = dateInput.value;
            if (currentSelectedDate) {
                loadPresences();
            }
        }

        document.getElementById('dateFilter').addEventListener('change', loadPresencesForDate);

        function loadTodayPresences() {
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('dateFilter').value = today;
            currentSelectedDate = today;
            loadPresences();
        }

        function displayPresences(presences, isHistorical) {
            const tableBody = document.getElementById('presences-table');
            const noData = document.getElementById('no-data');
            
            if (presences.length === 0) {
                tableBody.innerHTML = '';
                noData.style.display = 'block';
                return;
            }
            
            noData.style.display = 'none';
            
            tableBody.innerHTML = presences.map(p => {
                const date = p.date ? new Date(p.date) : null;
                const dateStr = date ? date.toLocaleDateString('fr-FR') : '';
                const timeStr = date ? date.toLocaleTimeString('fr-FR', { hour: '2-digit', minute: '2-digit' }) : '';
                
                const typeBadge = p.type === 'adherent' ? 
                    '<span class="badge badge-adherent">Adh√©rent</span>' : 
                    '<span class="badge badge-non-adherent">Non-adh√©rent</span>';
                
                const statusBadge = p.status === 'Pay√©' ? 
                    '<span class="badge badge-paye">Pay√©</span>' : 
                    (p.type === 'adherent' ? 
                        '<span class="badge badge-adherent">adherent</span>' : 
                        '<span class="badge badge-non-adherent">En attente</span>');
                
                let actions = '';
                if (!isHistorical && p.type !== 'adherent' && p.status !== 'Pay√©') {
                    actions += `<button class="action-btn btn-validate" onclick="openPaymentModal('${p.id}')">‚úì</button>`;
                }
                if (!isHistorical) {
                    actions += `<button class="action-btn btn-delete" onclick="deletePresence('${p.id}')">üóëÔ∏è</button>`;
                }
                
                return `
                    <tr>
                        <td>${dateStr}<br><small style="color:#6c757d;">${timeStr}</small></td>
                        <td>${typeBadge}</td>
                        <td>${p.nom || ''}</td>
                        <td>${p.prenom || ''}</td>
                        <td>${p.niveau || 'N/A'}</td>
                        <td>${p.type === 'adherent' ? 'Gratuit' : (p.tarif ? p.tarif + '‚Ç¨' : '')}</td>
                        <td>${p.methodePaiement || 'N/A'}</td>
                        <td>${statusBadge}</td>
                        <td>${actions}</td>
                    </tr>
                `;
            }).join('');
        }

        function updateStats(presences) {
            const total = presences.length;
            const adherents = presences.filter(p => p.type === 'adherent').length;
            const nonAdherents = presences.filter(p => p.type === 'non-adherent').length;
            const revenue = presences
                .filter(p => p.tarif && typeof p.tarif === 'number')
                .reduce((sum, p) => sum + p.tarif, 0);
            
            document.getElementById('stat-total').textContent = total;
            document.getElementById('stat-adherents').textContent = adherents;
            document.getElementById('stat-non-adherents').textContent = nonAdherents;
            document.getElementById('stat-revenue').textContent = revenue.toFixed(2);
        }

        function updateDebugInfo(message) {
            const timestamp = new Date().toLocaleTimeString();
            const today = new Date().toISOString().split('T')[0];
            
            document.getElementById('debug-content').innerHTML = `
                API URL: http://localhost:3001<br>
                Current Date: ${today}<br>
                Selected: ${currentSelectedDate}<br>
                Historical Mode: ${currentSelectedDate !== today ? 'Yes' : 'No'}<br>
                Last Update: ${timestamp}<br>
                Status: ${message}
            `;
        }

        function startAutoRefresh() {
            if (autoRefreshInterval) clearInterval(autoRefreshInterval);
            
            autoRefreshInterval = setInterval(() => {
                const today = new Date().toISOString().split('T')[0];
                if (currentSelectedDate === today) {
                    loadPresences();
                }
            }, 30000);
        }

        function openPaymentModal(presenceId) {
            currentPresenceId = presenceId;
            document.getElementById('paymentModal').style.display = 'block';
        }

        function closePaymentModal() {
            document.getElementById('paymentModal').style.display = 'none';
            currentPresenceId = null;
        }

        async function confirmPayment() {
            if (!currentPresenceId) return;
            
            const montant = document.getElementById('montant').value;
            const methodePaiement = document.getElementById('methodePaiement').value;
            
            if (!montant || !methodePaiement) {
                alert('Remplir tous les champs');
                return;
            }
            
            try {
                const response = await fetch(`/presences/${currentPresenceId}/valider`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ montant: parseFloat(montant), methodePaiement })
                });
                
                const result = await response.json();
                if (result.success) {
                    closePaymentModal();
                    loadPresences();
                } else {
                    alert('Erreur: ' + result.error);
                }
            } catch (error) {
                alert('Erreur r√©seau');
            }
        }

        async function deletePresence(presenceId) {
            if (!confirm('Supprimer?')) return;
            
            try {
                const response = await fetch(`/presences/${presenceId}`, { method: 'DELETE' });
                const result = await response.json();
                if (result.success) {
                    loadPresences();
                } else {
                    alert('Erreur: ' + result.error);
                }
            } catch (error) {
                alert('Erreur');
            }
        }

        async function archiveToday() {
            if (!confirm('Archiver?')) return;
            
            try {
                const response = await fetch('/presences/archive', { method: 'POST' });
                const result = await response.json();
                if (result.success) {
                    alert(result.message);
                    loadPresences();
                } else {
                    alert(result.message);
                }
            } catch (error) {
                alert('Erreur');
            }
        }

        async function exportSeason() {
            try {
                const response = await fetch('/admin/export/season', { method: 'POST' });
                const result = await response.json();
                if (result.success) {
                    alert(`Export r√©ussi: ${result.filename}`);
                } else {
                    alert('Erreur: ' + result.error);
                }
            } catch (error) {
                alert('Erreur');
            }
        }

        async function exportYear() {
            const year = document.getElementById('yearSelect').value;
            if (!year) {
                alert('S√©lectionnez une ann√©e');
                return;
            }
            
            try {
                const response = await fetch(`/admin/export/${year}`, { method: 'POST' });
                const result = await response.json();
                if (result.success) {
                    alert(`Export r√©ussi: ${result.filename}`);
                } else {
                    alert('Erreur: ' + result.error);
                }
            } catch (error) {
                alert('Erreur');
            }
        }

        // FIX: Better error handling for years
        async function loadAvailableYears() {
            try {
                console.log('Loading available years...');
                
                const response = await fetch('/admin/export/years');
                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}`);
                }
                
                const result = await response.json();
                console.log('Years response:', result);
                
                const years = result.years || [];
                
                const select = document.getElementById('yearSelect');
                select.innerHTML = '<option value="">S√©lectionner une ann√©e...</option>';
                
                if (years.length === 0) {
                    select.innerHTML += '<option value="" disabled>Aucune donn√©e historique</option>';
                } else {
                    years.forEach(year => {
                        select.innerHTML += `<option value="${year}">${year}</option>`;
                    });
                }
                
                console.log(`Loaded ${years.length} years`);
                
            } catch (error) {
                console.error('Error loading years:', error);
                const select = document.getElementById('yearSelect');
                select.innerHTML = '<option value="">Erreur de chargement</option>';
            }
        }

        window.onclick = function(event) {
            const modal = document.getElementById('paymentModal');
            if (event.target === modal) {
                closePaymentModal();
            }
        }
    </script>
</body>
</html>