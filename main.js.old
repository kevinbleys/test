const { app, BrowserWindow, shell, Menu, Tray } = require('electron');
const path = require('path');
const { spawn } = require('child_process');
const fs = require('fs');

// Globale variabelen
let mainWindow;
let backendProcess;
let tray;

// Configuratie
const BACKEND_PORT = 3001;
const BACKEND_PATH = path.join(__dirname, 'backend');
const BACKEND_SCRIPT = path.join(BACKEND_PATH, 'server.js');

// App ready event
app.whenReady().then(() => {
  createWindow();
  startBackend();
  createTray();
  
  app.on('activate', () => {
    if (BrowserWindow.getAllWindows().length === 0) createWindow();
  });
});

// Quit app wanneer alle vensters gesloten zijn (behalve macOS)
app.on('window-all-closed', () => {
  if (process.platform !== 'darwin') {
    stopBackend();
    app.quit();
  }
});

// App wordt beÃ«indigd
app.on('before-quit', () => {
  stopBackend();
});

function createWindow() {
  // Maak browser venster
  mainWindow = new BrowserWindow({
    width: 1200,
    height: 800,
    icon: path.join(__dirname, 'assets', 'icon.ico'),
    webPreferences: {
      nodeIntegration: false,
      contextIsolation: true,
      webSecurity: true
    },
    autoHideMenuBar: true,
    title: 'Klimzaal Presence Management'
  });

  // Menu verwijderen in productie
  if (!isDev()) {
    mainWindow.setMenuBarVisibility(false);
  }

  // Wacht tot backend opgestart is, dan load admin dashboard
  setTimeout(() => {
    mainWindow.loadURL(`http://localhost:${BACKEND_PORT}`);
  }, 3000);

  // Open externe links in browser
  mainWindow.webContents.setWindowOpenHandler(({ url }) => {
    shell.openExternal(url);
    return { action: 'deny' };
  });

  // Development tools
  if (isDev()) {
    mainWindow.webContents.openDevTools();
  }
}

function startBackend() {
  if (!fs.existsSync(BACKEND_SCRIPT)) {
    console.error('Backend script niet gevonden:', BACKEND_SCRIPT);
    return;
  }

  console.log('ðŸš€ Backend starten...');
  
  backendProcess = spawn('node', [BACKEND_SCRIPT], {
    cwd: BACKEND_PATH,
    stdio: isDev() ? 'inherit' : 'ignore',
    env: { ...process.env, NODE_ENV: 'production' }
  });

  backendProcess.on('error', (error) => {
    console.error('Backend error:', error);
  });

  backendProcess.on('exit', (code) => {
    console.log(`Backend gestopt met code ${code}`);
  });
}

function stopBackend() {
  if (backendProcess) {
    console.log('ðŸ›‘ Backend stoppen...');
    backendProcess.kill();
    backendProcess = null;
  }
}

function createTray() {
  const iconPath = path.join(__dirname, 'assets', 'tray-icon.ico');
  
  if (fs.existsSync(iconPath)) {
    tray = new Tray(iconPath);
    
    const contextMenu = Menu.buildFromTemplate([
      { 
        label: 'Admin Dashboard', 
        click: () => shell.openExternal(`http://localhost:${BACKEND_PORT}`)
      },
      { 
        label: 'Tablet Interface', 
        click: () => shell.openExternal(`http://localhost:${BACKEND_PORT}/tablet`)
      },
      { type: 'separator' },
      { 
        label: 'Toon App', 
        click: () => {
          if (mainWindow) {
            mainWindow.show();
            mainWindow.focus();
          }
        }
      },
      { 
        label: 'Afsluiten', 
        click: () => app.quit()
      }
    ]);
    
    tray.setToolTip('Klimzaal Presence Management');
    tray.setContextMenu(contextMenu);
    
    // Dubbelklik om hoofdvenster te tonen
    tray.on('double-click', () => {
      if (mainWindow) {
        mainWindow.show();
        mainWindow.focus();
      }
    });
  }
}

function isDev() {
  return process.env.NODE_ENV === 'development';
}